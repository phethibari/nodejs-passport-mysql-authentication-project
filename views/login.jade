extends layout

block content
    .container
        h1 Login Page
        p.lead Login test with Passport.js
        br
        form(action="/login", role='form', method="post", style="max-width: 300px")
            .form-group
                input.form-control(type='text', name='username', placeholder='username here')
            .form-group
                input.form-control(type='password', name='password')
            button.btn.btn-primary(type='submit') Submit
            &nbsp
            a(href="/")
                button.btn.btn-secondary(type='button') Cancel