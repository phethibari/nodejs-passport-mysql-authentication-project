extends layout

block content
    .container
        h1 Register Page
        p Register new user
        br
        form(action="/register", method="post", style='max-width: 300px')
            .form-group
                input.form-control(type='text', name='firstname', placeholder='Enter firstname')
            .form-group
                input.form-control(type='text', name='lastname', placeholder='Enter lastname')
            .form-group
                input.form-control(type='text', name='gender', placeholder='Enter gender')
            .form-group
                input.form-control(type='text', name='address', placeholder='Enter address')
            .form-group
                input.form-control(type='text', name='tel', placeholder='Enter tel')
            .form-group
                input.form-control(type='text', name='email', placeholder='Enter email')
            .form-group
                input.form-control(type='text', name='image', placeholder='Enter image')
            .form-group
                input.form-control(type='text', name='username', placeholder='Enter Username')
            .form-group
                input.form-control(type='password', name='password', placeholder='Password')
            .form-group
                button.btn.btn-primary(type='submit') Submit
                &nbsp
                a(href="/")
                    button.btn.btn-secondary(type='button') Cancel